@page "/"
<style>
    .page-container {
        position: relative;
        width: 100%;
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .background-image {
        position: absolute;
        width: 100%;
        height: 100%;
        background: url('/img/lpt-parkirisca.jpg') no-repeat center center;
        background-size: cover;
        filter: blur(8px);
        z-index: 1;
    }

    .content {
        position: relative;
        z-index: 2;
        text-align: center;
        color: white;
    }

    .title {
        font-family: 'Poppins', sans-serif; 
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .button-container {
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .btn {
        font-size: 1rem;
        padding: 10px 20px;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

    .btn:hover {
        background-color: #0056b3;
    }
</style>

<div class="page-container">
    <div class="background-image"></div>

    <div class="content">
        <h1 class="title">Welcome to SmartPark. Use your account to continue</h1>

        <div class="button-container">
            <button class="btn btn-primary" @onclick="NavigateToLogin">Log In</button>
            <button class="btn btn-primary" @onclick="NavigateToSignUp">Sign Up</button>
        </div>
    </div>
</div>

@code {
    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    private void NavigateToSignUp()
    {
        NavigationManager.NavigateTo("/signup");
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; }
}
